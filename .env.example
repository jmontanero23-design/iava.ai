# Client-side base (optional). Leave empty to use relative /api
VITE_API_BASE=

# Server-side (set in Vercel Project Settings → Environment Variables)
# Do NOT commit real credentials.
# Alpaca
ALPACA_ENV=paper
ALPACA_KEY_ID=your_alpaca_key_id
ALPACA_SECRET_KEY=your_alpaca_secret
ALPACA_DATA_URL=https://data.alpaca.markets/v2
# Optional: override crypto data base (defaults to Alpaca v1beta3)
# ALPACA_DATA_CRYPTO_URL=https://data.alpaca.markets/v1beta3

# n8n webhook (optional until your workflow is ready)
N8N_WEBHOOK_URL=
N8N_SHARED_SECRET=

# Scanner defaults
# Comma-separated list for default scan universe; can be overridden via UI or query
SCAN_SYMBOLS=SPY,QQQ,AAPL,MSFT,NVDA,TSLA,AMZN,META,GOOGL,NFLX,AMD,SMCI,AVGO,COST,JPM,UNH,XOM

# Optional notifications (future integrations)
# SLACK_WEBHOOK_URL=
# DISCORD_WEBHOOK_URL=
# PUSHOVER_TOKEN=
# PUSHOVER_USER=

# Cron secret for scheduled scans (configure Vercel Cron to call /api/scan?..., set header X-Cron-Secret)
# CRON_SECRET=

# Order guardrails (all optional; leave blank to disable)
# Require market to be open (true/false)
ORDER_RULE_MARKET_OPEN_REQUIRED=true
# Max concurrent positions (0 = no limit)
ORDER_RULE_MAX_POSITIONS=5
# Max risk per order as % of equity (0 = no limit)
ORDER_RULE_MAX_RISK_PCT=2.0
# Max daily loss as % versus last_equity (0 = no limit)
ORDER_RULE_MAX_DAILY_LOSS_PCT=3.0
# Max total exposure (sum |market_value| / equity) as % (0 = no limit)
ORDER_RULE_MAX_EXPOSURE_PCT=100
# Minimum minutes between orders (0 = no cooldown)
ORDER_RULE_MIN_MINUTES_BETWEEN_ORDERS=2


# LLM configuration (set in Vercel → Environment Variables)
# Provider: openai | anthropic
LLM_PROVIDER=openai
# OpenAI
OPENAI_API_KEY=
LLM_MODEL_EXPLAIN=gpt-4o-mini
LLM_MODEL_PRESET=gpt-4o-mini
# Anthropic (optional)
ANTHROPIC_API_KEY=
# For Anthropic you may set models like: claude-3-5-sonnet-20240620
# Client feature flags
# Allow streaming (SSE) controls in the UI (default true)
VITE_STREAMING_ALLOWED=true
